<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="AscensionServer"
                   namespace="AscensionServer.Model">

  <class name="User" table="user">
    <id name="UUID" column="uuid" type="String">
      <generator class="uuid.hex" />
    </id>
    <property name="Account" column="account" type="String" />
    <property name="Password" column="password" type="String" />
    <set name="RoleList" table="role_stats" generic="true" inverse="true">
      <key column="role_user_account" foreign-key="fk_role_user_account"/>
      <one-to-many class="Role"/>
    </set>
  </class>
</hibernate-mapping>

